@using ParkLookup.Models
@model IEnumerable<ParkLookup.ViewModels.RatingCountGroup>
           
@{
    ViewBag.Title = "Rating Statistics";
}

<h2>Rating Statistics</h2>

<table>
    <tr>
        <th>
            Park
        </th>
        <th>
            # Of Ratings
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParkName)
        </td>
        <td>
            @item.RatingCount
        </td>
    </tr>
}
</table>

<hr>
<button class="bottom">@Html.ActionLink("Go To Search", "Sort")</button>

<h1>New Review:</h1>

<form method="post">
  <label for="user">User's Name</label>
  <input id="user" name="user" type="text">
  <br>
  <label for="parkName">Park Name</label>
  <input id="parkName" name="parkName" type="text">
  <br>
  <label for="state">State</label>
  <input id="state" name="state" type="text">
  <br>
  <label for="city">City</label>
  <input id="city" name="city" type="text">
  <br>
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number">
  <br>
  <label for="activities">Activities:</label>
  <input id="activities" name="activities" type="text">
  <br>
  <button type="submit">Go!</button>
</form>
